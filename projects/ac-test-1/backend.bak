resource "random_id" "bucket_prefix" {
  byte_length = 8
}

terraform {
  backend "gcs" {
    bucket = "${random_id.bucket_prefix.hex}-ac-test-1-state"
    prefix  = "terraform/state"
  }
}

resource "google_storage_bucket" "state" {
  name          = "${random_id.bucket_prefix.hex}-ac-test-1-state"
  project       = google_project.project.project_id
  location      = "US"
  storage_class = "STANDARD"
  force_destroy = true

  uniform_bucket_level_access = true
}

resource "google_storage_bucket_iam_policy" "policy" {
  bucket = google_storage_bucket.state.name
  policy_data = data.google_iam_policy.state-admin.policy_data
}

data "google_iam_policy" "state-admin" {
  binding {
    role = "roles/storage.admin"
    members = [
      "serviceAccount:${google_service_account.spacelift-operator.email}",
    ]
  }
}
